extends layout
block content
  body
    #myCarousel.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        if com.carousel.slide1.on 
          li.active(data-target='#myCarousel', data-slide-to='0')
        if com.carousel.slide2.on
          li(data-target='#myCarousel', data-slide-to='1')
        if com.carousel.slide3.on
          li(data-target='#myCarousel', data-slide-to='2')
      .carousel-inner
        if com.carousel.slide1.on
          .item.active
            img(src='/images/#{com.carousel.slide1.img}', alt='First slide')
            .container
              .carousel-caption
                h1= com.carousel.slide1.headline
                p= com.carousel.slide1.subtext
                p
                  a.btn.btn-lg.btn-primary(href='#', role='button')= com.carousel.slide1.buttonText
        if com.carousel.slide2.on
          .item
            img(src='/images/#{com.carousel.slide2.img}', alt='Second slide')
            .container
              .carousel-caption
                h1= com.carousel.slide2.headline
                p=  com.carousel.slide3.subtext
                p
                  a.btn.btn-lg.btn-primary(href='#', role='button')= com.carousel.slide2.buttonText
        if com.carousel.slide3.on
          .item
            img(src='/images/#{com.carousel.slide3.img}', alt='Third slide')
            .container
              .carousel-caption
                h1= com.carousel.slide3.headline
                p= com.carousel.slide3.subtext
                p
                  a.btn.btn-lg.btn-primary(href='#', role='button')= com.carousel.slide3.buttonText
      a.left.carousel-control(href='#myCarousel', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left
      a.right.carousel-control(href='#myCarousel', data-slide='next')
        span.glyphicon.glyphicon-chevron-right

