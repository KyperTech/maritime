!!! 5
html
  head
    title=com.company
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // Styles
    link(href='/css/cleanCanvas/bootstrap.min.css', rel='stylesheet')
    link(href='/css/cleanCanvas/bootstrap-responsive.min.css', rel='stylesheet')
    link(href='/css/cleanCanvas/bootstrap-overrides.css', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='/css/cleanCanvas/theme.css')
    link(href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic', rel='stylesheet', type='text/css')
    
    //if lt IE 9
    script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
    block head
  body.pull_top
    .navbar.transparent.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/')
            strong= com.company
          .nav-collapse.collapse
            ul.nav.pull-right
              li
                a(href='/') HOME
              if com.navAbout
                li
                  a(href='/about') ABOUT
              if com.navServices
                li
                  a(href='/services') SERVICES
              if com.navContact
                li
                  a(href='/contact') CONTACT
              if com.navPortfolio
                li
                  a(href='/portfolio') PORTFOLIO
              if com.navBlog
                li
                  a(href='/blog') BLOG
    block content
    footer#footer(style='margin-top: 0;')
      .container
        .row.info
          .span6.residence
            ul
              li= com.address
              li
                | #{com.city} , #{com.state} #{com.zip}  
          .span5.touch
            ul
              li
                strong P.
                  | #{com.phone}
              li
                strong E.
                a(href=com.email)  #{com.email}
        .row.credits
          .span12
            .row.social
              .span12
                a.facebook(href=com.fbUrl)
                  span.socialicons.ico1
                  span.socialicons_h.ico1h
                a.twitter(href=com.twitterUrl)
                  span.socialicons.ico2
                  span.socialicons_h.ico2h
                a.gplus(href='#')
                  span.socialicons.ico3
                  span.socialicons_h.ico3h
            .row.copyright
              .span12
                | Â© 2013 #{com.company} . All rights reserved. Built By 
                a(href="http://www.kypertech.com") Kyper
    // Scripts
    script(src='http://code.jquery.com/jquery-latest.js')
    script(src='js/cleanCanvas/bootstrap.min.js')
    script(src='js/cleanCanvas/theme.js')
    script(type='text/javascript', src='js/cleanCanvas/index-slider.js')
    script(type='text/javascript', src='js/cleanCanvas/flexslider.js')
