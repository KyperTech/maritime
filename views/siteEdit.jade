extends admintemplate
block content
  body
    #page-wrapper
      .row
        .col-lg-12
          h1 Site Build
          form(role="form" name="edit", method="post", action="/edit")
            .col-lg-6
              h3 Company
              .form-group
                input.form-control(type="text", placeholder="Shoomba Inc" value=com.company, name="company")
              h3 Address
              .form-group
                label(for="address") Street
                  input.form-control(type="text", placeholder="555 Cedar Rd", value=com.contact.address, name="address")
                label(for="city") City
                  input.form-control(type="text", placeholder="Cityville", value=com.contact.city, name="city")
                label(for="state") State
                  input.form-control(type="text", placeholder="MD", value=com.contact.state, name="state")
                label(for="zip") Zip
                  input.form-control(type="text", placeholder="55555", value=com.contact.zip, name="zip")
              h3 Contact
              .form-group
                label(for="email") Email
                  input.form-control(type="email", placeholder="email", value=com.contact.email, name="email")
                label(for="phone") Phone
                  input.form-control(type="tel", placeholder="phone", value=com.contact.phone, name="phone")
            .col-lg-6  
              h3 Pages
              .form-group
                label(for="about") About
                  .make-switch.switch-mini
                    if navTab.about
                      input.form-group(type="checkbox", checked, name="about")
                    else
                      input.form-group(type="checkbox", name="about")
                label(for="services") Services
                  .make-switch.switch-mini
                    if com.navTab.services
                      input.form-group(type="checkbox", checked, name="services")
                    else
                      input.form-group(type="checkbox", name="services")
                label(for="contact") Contact
                  .make-switch.switch-mini
                    if com.navTab.contact
                      input.form-group(type="checkbox", checked, name="contact")
                    else
                      input.form-group(type="checkbox", name="contact")
                label(for="blog") Blog
                  .make-switch.switch-mini
                    if com.navTab.blog
                      input.form-group(type="checkbox", checked, name="blog")
                    else
                      input.form-group(type="checkbox", name="blog")
                label(for="portfolio") Portfolio
                  .make-switch.switch-mini
                    if com.navTab.portfolio
                      input.form-group(type="checkbox", checked, name="portfolio")
                    else
                      input.form-group(type="checkbox", name="portfolio")
              .col-lg-3
                h3 Style
                .form-group
                  select.form-control(name="style")
                    if com.style=="css/bootstrap.css"
                      option(value="css/bootstrap.css", selected) Default
                    else 
                      option(value="css/bootstrap.css") Default
                    if com.style=="css/bootstrapflat.css"
                      option(value="css/bootstrapflat.css", selected) Flatly
                    else 
                      option(value="css/bootstrapflat.css") Flatly
                    if com.style=="css/bootstrapslate.css"
                      option(value="css/bootstrapslate.css", selected) Slate
                    else 
                      option(value="css/bootstrapslate.css") Slate
                    if com.style=="css/bootstrapsimplex.css"
                      option(value="css/bootstrapsimplex.css", selected) Simplex
                    else 
                      option(value="css/bootstrapsimplex.css") Simplex
                    if com.style=="css/bootstrapamelia.css"
                      option(value="css/bootstrapamelia.css", selected) Amelia
                    else 
                      option(value="css/bootstrapamelia.css") Amelia
                    if com.style=="css/bootstrapreadable.css"
                      option(value="css/bootstrapreadable.css", selected) Readable
                    else 
                      option(value="css/bootstrapreadable.css") Readable
              .form-group
                .col-sm-10
                  button.btn.btn-primary(type="submit") Submit
