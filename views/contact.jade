extends layout-1
block content  
  body  
    .container
        .row
            .col-lg-12
              h1.page-header
                | Contact 
                small We'd Love to Hear From You!
              ol.breadcrumb
                li
                  a(href='index.html') Home
                li.active Contact
            .col-lg-12
              iframe(width='100%', height='400px', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src='http://maps.google.com/maps?hl=en&ie=UTF8&ll=37.0625,-95.677068&spn=56.506174,79.013672&t=m&z=4&output=embed')
          .row
            .col-sm-8
              h3 Contact
              p=com.contact.desc
              include messages
              form(role='form', method='POST', action='/contact')
                .row
                  .form-group.col-lg-4
                    label(for='message_name') Name
                    input#input1.form-control(type='text', placeholder='Name', name='message[name]', value=message.name)
                  .form-group.col-lg-4
                    label(for='message_email') Email Address
                    input#input2.form-control(type='text', placeholder='Email', name='message[email]', value=message.email)
                  .form-group.col-lg-4
                    label(for='input3') Phone Number
                    input#input3.form-control(type='phone', name='contact_phone')
                  .clearfix
                  .form-group.col-lg-12
                    label(for='message_message') Message
                    textarea#input4.form-control(placeholder='Enter message', rows='6', name='message[message]')=message.message
                  .form-group.col-lg-12
                    input(type='hidden', name='save', value='contact')
                    button.btn.btn-primary(type='submit') Submit
            .col-sm-4
              h3=com.company
              h5=com.slogan
              p=com.contact.address
                br
                | #{com.contact.city}, #{com.contact.state} #{com.contact.zip}
                br
              p
                i.fa.fa-phone
                | :#{com.contact.phone}
              p
                i.fa.fa-envelope-o
                abbr(title='Email')
                | : 
                a(href='mailto:' + com.contact.email)=com.contact.email

              p
                i.fa.fa-clock-o
                abbr(title='Hours')
                | : Monday: 
                |#{com.content.schedule.monday}
                br
                | Tuesday :
                |#{com.content.schedule.tuesday}
                br
                | Wednesday :
                |#{com.content.schedule.wednesday}
                br
                | Thursday :
                |#{com.content.schedule.thursday}
                br
                |Friday: 
                |#{com.content.schedule.friday}
                br
                | Saturday :
                |#{com.content.schedule.saturday}
                br
                |Sunday :
                |#{com.content.schedule.sunday}

              ul.list-unstyled.list-inline.list-social-icons
                li.tooltip-social.facebook-link
                  a(href='#facebook-page', data-toggle='tooltip', data-placement='top', title='Facebook')
                    i.fa.fa-facebook-square.fa-2x
                li.tooltip-social.linkedin-link
                  a(href='#linkedin-company-page', data-toggle='tooltip', data-placement='top', title='LinkedIn')
                    i.fa.fa-linkedin-square.fa-2x
                li.tooltip-social.twitter-link
                  a(href='#twitter-profile', data-toggle='tooltip', data-placement='top', title='Twitter')
                    i.fa.fa-twitter-square.fa-2x
                li.tooltip-social.google-plus-link
                  a(href='#google-plus-page', data-toggle='tooltip', data-placement='top', title='Google+')
                    i.fa.fa-google-plus-square.fa-2x
    