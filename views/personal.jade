            .col-md-2.text-center
              .service-item
                i.service-icon.fa.fa-magnet
                h4=com.services.service2.title
                p=com.services.service2.desc
            .col-md-2.text-center
              .service-item
                i.service-icon.fa.fa-shield
                h4=com.services.service3.title
                p=com.services.service3.desc
            .col-md-2.text-center
              .service-item
                i.service-icon.fa.fa-pencil
                h4=com.services.service4.title
                p=com.services.service4.desc
        if com.navTab.portfolio
          .row
            .col-md-4.col-md-offset-4.text-center
              h2 My Portfolio
              hr
              //Later on I plan to do an each statement for each service/portfolio item, but for now they most likley won't be that man
          .row  
            .col-md-2.col-md-offset-2.text-center
              .service-item
                i.service-icon.fa.fa-rocket
                //i=com.services.service1.picturelink  Figure out the correct way to do this
                h4=com.portfolio.project1.title
                p=com.portfolio.project1.desc
            .col-md-2.text-center
              .service-item
                i.service-icon.fa.fa-magnet
                h4=com.portfolio.project2.title
                p=com.portfolio.project2.desc
            .col-md-2.text-center
              .service-item
                i.service-icon.fa.fa-shield
                h4=com.portfolio.project3.title
                p=com.portfolio.project3.desc
            .col-md-2.text-center
              .service-item
                i.service-icon.fa.fa-pencil
                h4=com.portfolio.project4.title
